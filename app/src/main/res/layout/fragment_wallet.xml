<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <variable
      name="viewmodel"
      type="app.fawry.task.presentation.balance.WalletViewModel" />
  </data>


  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/dimen10">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_steps_16"
        android:padding="@dimen/dimen10">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/appCompatTextView"
          style="@style/txtStyleBold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dimen5"
          android:layout_marginTop="@dimen/dimen5"
          android:text="@string/point_balance"
          android:textAlignment="viewStart"
          android:textColor="@color/color_steps_text"
          android:textSize="18sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/appCompatImageView2"
          android:layout_width="82dp"
          android:layout_height="82dp"
          android:src="@drawable/ic_wallet_balance"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />


        <View
          android:id="@+id/view"
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/dimen10"
          android:background="@color/white"
          app:layout_constraintEnd_toStartOf="@+id/appCompatImageView2"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/appCompatTextView2"
          style="@style/txtStyleBold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dimen5"
          android:layout_marginTop="@dimen/dimen10"
          android:text="600 نقطة"
          android:textAlignment="viewStart"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="24sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/view" />
      </androidx.constraintlayout.widget.ConstraintLayout>


      <androidx.appcompat.widget.AppCompatTextView
        style="@style/txtStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen5"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginEnd="@dimen/dimen5"
        android:text="@string/wallet_automatic"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_date"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toTopOf="parent" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="120dp"
          android:layout_gravity="center"
          android:layout_margin="@dimen/dimen2"
          android:layout_weight="1"
          android:background="@drawable/bg_rounded_steps_16"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="@dimen/dimen5">

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:text="10"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center"
            android:text="نـقـاط مـجـانـيـة عـنـد إنشاء الحساب"
            android:textColor="@color/color_steps_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <LinearLayout

          android:layout_width="0dp"
          android:layout_height="120dp"
          android:layout_gravity="center"
          android:layout_margin="@dimen/dimen2"
          android:layout_weight="1"
          android:background="@drawable/bg_rounded_steps_16"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="@dimen/dimen5">

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:text="10"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center"
            android:text="نقاط مجانية تضاف إلى المحفظة كل يوم"
            android:textColor="@color/color_steps_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="120dp"
          android:layout_gravity="center"
          android:layout_margin="@dimen/dimen2"
          android:layout_weight="1"
          android:background="@drawable/bg_rounded_steps_16"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="@dimen/dimen5">

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:text="∞"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center"
            android:text="عدد النقاط التي يمكنك شحنها"
            android:textColor="@color/color_steps_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

      </LinearLayout>

      <androidx.appcompat.widget.AppCompatTextView
        style="@style/txtStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen5"
        android:layout_marginTop="@dimen/dimen40"
        android:layout_marginEnd="@dimen/dimen5"
        android:text="@string/wallet_charge_wallet"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_date"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toTopOf="parent" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="90dp"
          android:layout_gravity="center"
          android:layout_margin="@dimen/dimen10"
          android:layout_weight="1"
          android:background="@drawable/bg_rounded_strock_primary_12"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="@dimen/dimen5">

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:text="20 نقطة"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center"
            android:text="القيمة: 20 ر.س"
            android:textColor="@color/color_steps_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <LinearLayout

          android:layout_width="0dp"
          android:layout_height="90dp"
          android:layout_gravity="center"
          android:layout_margin="@dimen/dimen10"
          android:layout_weight="1"
          android:background="@drawable/bg_rounded_strock_primary_12"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="@dimen/dimen5">

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:text="20 نقطة"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center"
            android:text="القيمة: 20 ر.س"
            android:textColor="@color/color_steps_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="90dp"
          android:layout_gravity="center"
          android:layout_margin="@dimen/dimen10"
          android:layout_weight="1"
          android:background="@drawable/bg_rounded_strock_primary_12"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="@dimen/dimen5">

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:text="20 نقطة"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatTextView
            style="@style/txtStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center"
            android:text="القيمة: 20 ر.س"
            android:textColor="@color/color_steps_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

      </LinearLayout>

      <androidx.appcompat.widget.AppCompatTextView
        style="@style/txtStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen5"
        android:layout_marginTop="@dimen/dimen40"
        android:layout_marginEnd="@dimen/dimen5"
        android:text="@string/enter_another_balance"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_date"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toTopOf="parent" />


      <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_password"
        style="@style/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen14"
        android:layout_marginEnd="@dimen/dimen10"
        android:background="@drawable/bg_rounded_grey_strock_12"
        android:hint="@string/cost"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password" />


      <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        style="@style/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/dimen10"
        android:layout_marginEnd="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen30"
        android:paddingTop="@dimen/dimen16"
        android:paddingBottom="@dimen/dimen16"
        android:text="@string/pay"
        android:textSize="16sp"
        app:iconGravity="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forget_password" />


    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

</layout>
