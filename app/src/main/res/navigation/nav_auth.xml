<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/nav_auth"
  app:startDestination="@id/introFragment">


  <fragment
    android:id="@+id/introFragment"
    android:name="com.trenddc.hashksa.task.presentation.auth.intro.IntroFragment"
    android:label="" />
  <fragment
    android:id="@+id/loginFragment"
    android:name="com.trenddc.hashksa.task.presentation.auth.login.LoginFragment"
    android:label="">
    <deepLink
      android:id="@+id/loginFragment"
      android:autoVerify="true"
      app:uri="loginFragment://app.hashksa.login" />
  </fragment>
  <fragment
    android:id="@+id/registerFragment"
    android:name="com.trenddc.hashksa.task.presentation.auth.register.RegisterFragment"
    android:label="">

    <deepLink
      android:id="@+id/registerFragment"
      android:autoVerify="true"
      app:uri="registerFragment://app.hashksa.register" />
    <action
      android:id="@+id/action_registerFragment_to_genderFragment"
      app:destination="@id/genderFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right" />
  </fragment>
  <dialog
    android:id="@+id/forgetPasswordDialog"
    android:name="com.trenddc.hashksa.task.presentation.auth.forgetPassword.ForgetPasswordDialog"
    android:label="">
    <deepLink
      android:id="@+id/forgetPasswordDialog"
      android:autoVerify="true"
      app:uri="forgetPasswordDialog://app.hashksa.forget.password" />
    <action
      android:id="@+id/action_forgetPasswordDialog_to_confirmCodeDialog"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right"
      app:destination="@id/confirmCodeDialog"
      />
    <action
      android:id="@+id/action_forgetPasswordDialog_to_emailDialog"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right"
      app:destination="@id/emailDialog" />
  </dialog>



  <dialog
    android:id="@+id/confirmCodeDialog"
    android:name="com.trenddc.hashksa.task.presentation.auth.confirmCode.ConfirmCodeDialog"
    android:label="">
    <deepLink
      android:id="@+id/confirmCodeDialog"
      android:autoVerify="true"
      app:uri="confirmCodeDialog://app.hashksa.confirm.code" />
    <action
      android:id="@+id/action_confirmCodeDialog_to_changePasswordDialog"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right"
      app:destination="@id/changePasswordDialog"
      app:popUpTo="@id/forgetPasswordDialog"
      app:popUpToInclusive="true"
      />
    <argument
      android:name="phone"
      app:argType="string"
      app:nullable="true" />
    <argument
      android:name="email"
      app:argType="string"
      app:nullable="true" />
    <argument
      android:name="code"
      app:argType="string" />
  </dialog>
  <dialog
    android:id="@+id/changePasswordDialog"
    android:name="com.trenddc.hashksa.task.presentation.auth.updatePassword.ChangePasswordDialog">
    <argument
      android:name="phone"
      app:argType="string"
      app:nullable="true" />
    <deepLink
      android:id="@+id/changePasswordDialog"
      android:autoVerify="true"
      app:uri="changePasswordDialog://app.hashksa.change.password/{phone}" />
    <argument
      android:name="email"
      app:argType="string"
      app:nullable="true" />
  </dialog>
  <fragment
    android:id="@+id/genderFragment"
    android:name="com.trenddc.hashksa.task.presentation.auth.gender.GenderFragment">
    <argument
      android:name="request"
      app:argType="com.trenddc.hashksa.task.domain.auth.request.RegisterRequest" />
    <action
      android:id="@+id/action_genderFragment_to_classificationFragment"
      app:destination="@id/classificationFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right" />
  </fragment>
  <fragment
    android:id="@+id/classificationFragment"
    android:name="com.trenddc.hashksa.task.presentation.classification.ClassificationFragment"
    android:label="@string/classifications"
    />
  <fragment
    android:id="@+id/privacyFragment"
    android:name="com.trenddc.hashksa.task.presentation.settings.ui.PrivacyFragment"
    android:label="{titleBar}" >
    <argument
      android:name="titleBar"
      app:argType="string" />

    <argument
      android:name="type"
      app:argType="string" />

    <deepLink
      android:id="@+id/privacy"
      android:autoVerify="true"
      app:uri="privacy://com.trenddc.hashksa.privacy/{titleBar}/{type}" />

  </fragment>
  <dialog
    android:id="@+id/emailDialog"
    android:name="com.trenddc.hashksa.task.presentation.auth.email.EmailDialog"
    android:label="@string/email" >
    <action
      android:id="@+id/action_emailDialog_to_confirmCodeDialog"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right"
      app:destination="@id/confirmCodeDialog" />

    <deepLink
      android:id="@+id/emailDialog"
      android:autoVerify="true"
      app:uri="emailDialog://com.trenddc.hashksa.emailDialog" />
  </dialog>
  <dialog
    android:id="@+id/loginDialog"
    android:name="com.trenddc.hashksa.task.presentation.auth.loginDialog.LoginDialog"
    android:label="@string/login" >

    <deepLink
      android:id="@+id/loginDialog"
      android:autoVerify="true"
      app:uri="loginDialog://com.trenddc.hashksa.loginDialog" />
    <action
      android:id="@+id/action_loginDialog_to_registerFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right"
      app:destination="@id/registerFragment" />

  </dialog>


</navigation>